{
  "appId": "com.goalmanager.app",
  "productName": "Goal Manager",
  "asar": false,
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "package.json",
    "index.js",
    "preload.js",
    "backend/**/*",
    "frontend/dist/**/*",
    "!backend/node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!backend/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!backend/node_modules/*.d.ts",
    "!backend/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dir",
        "arch": ["arm64"]
      }
    ],
    "identity": null
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "Goal Manager"
  },
  "afterPack": "./build/afterPack.js"
}
